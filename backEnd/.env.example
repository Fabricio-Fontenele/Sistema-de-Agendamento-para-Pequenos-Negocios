# String de conexão com o banco MySQL (ajuste usuário, senha, host e nome do banco)
DATABASE_URL="mysql://usuario:senha@localhost:3306/nome_do_banco"

# Segredo para geração/verificação do JWT (troque por um segredo forte em produção)
JWT_SECRET="coloque-um-segredo-bem-forte-aqui"

# Variável de ambiente do Node.js (development, production ou test)
NODE_ENV="development"

# Configurações para envio de e-mail (exemplo usando Gmail SMTP)
MAIL_HOST="smtp.gmail.com"
MAIL_PORT=587
MAIL_USER="seu-email@gmail.com"
MAIL_PASS="sua-senha-ou-app-password"

# (Opcional) URL para frontend - útil para CORS ou links em e-mails
FRONTEND_URL="http://localhost:5173"